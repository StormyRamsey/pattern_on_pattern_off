<h2>Edit Yarn</h2>

<%= form_for([@pattern, @pattern.yarns.build]) do |f| %>
  <p>
    <%= f.text_field :yarn_url %>
    <%= f.label :yarn_url %><br>
  </p>
  <p>
    <%= f.text_field :name %>
    <%= f.label :name %><br>
  </p>
  <p>
    <%= f.text_field :yards %>
    <%= f.label :yards %><br>
  </p>
  <p>
    <%= f.submit %>
  </p>
  <% end %>
  <%= link_to 'Edit', edit_pattern_yarn_path(@pattern) %>
